@using qodeless.application.ViewModels
@using qodeless.domain.Enums
@model AccountViewModel
@{
    ViewData["Title"] = "Parceiros";
}

<h4>Parceiros</h4>

<form asp-action="Upsert" id="myform">

    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-12">
            <div class="card mt-2">
                <div class="card-body">
                    <div class="row">
                        <div class="col-3">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label">Nome</label>
                                <input asp-for="Name" class="form-control form-control-sm" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label">Descrição</label>
                                <input asp-for="Description" class="form-control form-control-sm" />
                            </div>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <div class="form-group">
                                <label asp-for="CellPhone" class="control-label">Nº Celular</label>
                                <input asp-for="CellPhone" class="form-control form-control-sm" />
                            </div>
                            <span asp-validation-for="CellPhone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <div class="form-group">
                                <label class="control-label">Status</label>
                                <select asp-for="Status" asp-items="@ViewBag.Status" id="EAccountStatus">
                                </select>
                            </div>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4 mt-3">
            <input type="submit" value="Cadastrar" class="btn btn-outline-success btn-sm w-150" /> |
            <a class="btn btn-outline-secondary btn-sm w-150" asp-action="Index">Voltar</a>
        </div>

    </div>

</form>