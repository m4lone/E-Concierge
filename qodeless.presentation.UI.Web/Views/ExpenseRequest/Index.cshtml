@using qodeless.application.ViewModels
@model IEnumerable<ExpenseRequestViewModel>

<fieldset class="fieldset">
    <legend>Pedido de Despesas</legend>
    <div class="row-fluid">
        <div class="span6">
            @Html.AntiForgeryToken()
            <table id="dt" class="dt table-responsive-sm table table-striped table-bordered" style="width:100%"
                   data-cols="expensename,useroperationid,message,duedate,request,status"
                   data-what="ExpenseRequest"
                   data-main-col="name"
                   data-delete-url="/ExpenseRequest/Delete"
                   data-edit-url="/ExpenseRequest/Upsert"
                   data-create-url="/ExpenseRequest/Upsert">
                <thead>
                    <tr>
                        <th>Operação do Usuário</th>                       
                        <th>Observação</th>
                        <th>Data de Vencimento</th>
                        <th>Requisição</th>
                        <th>Casa</th>
                        <th data-orderable="false" class="w-110"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr id="@item.Id" role="row">
                        <td>@item.UserOperationID</td>
                        <td>@item.Message</td>
                        <td>@item.DueDate</td>
                        <td>@item.Request</td>
                        <td>@item.ExpenseName</td>
                        <td></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</fieldset>

<br />