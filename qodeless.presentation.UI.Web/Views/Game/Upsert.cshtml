@using qodeless.application.ViewModels
@using qodeless.domain.Enums
@model GameViewModel
@{
    ViewData["Title"] = "Jogos";
}

<h4>Jogos</h4>

<form asp-action="Upsert" id="myform">

    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-12">
            <div class="card mt-2">
                <div class="card-body">
                    <div class="row">
                        <div class="col-3">
                            <div class="form-group">
                                <label asp-for="Code" class="control-label">Código</label>
                                <select asp-for="Code" asp-items="Html.GetEnumSelectList<EGameCode>()">
                                </select>
                            </div>
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label">Nome</label>
                                <input asp-for="Name" class="form-control form-control-sm" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <div class="form-group">
                                <label asp-for="DtPublish" class="control-label">Data de Publicação</label>
                                <input asp-for="DtPublish" class="form-control form-control-sm" type=datetime-local />
                            </div>
                            <span asp-validation-for="DtPublish" class="text-danger"></span>
                        </div>
                    </div>
                     <div class="row">
                        <div class="col-3">
                            <div class="form-group">
                                <label class="control-label">Status</label>
                                <select asp-for="Status" asp-items="@ViewBag.Status" id="EGameStatus">
                                </select>
                            </div>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                     <div class="row">
                        <div class="col-3">
                            <div class="form-group">
                                <label asp-for="Version" class="control-label">Versão</label>
                                <input asp-for="Version" class="form-control form-control-sm" />
                            </div>
                            <span asp-validation-for="Version" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4 mt-3">
            <input type="submit" value="Cadastrar" class="btn btn-outline-success btn-sm w-150" /> |
            <a class="btn btn-outline-secondary btn-sm w-150" asp-action="Index">Voltar</a>
        </div>

    </div>

</form>